<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <gradient
                android:startColor="#A14004"
                android:endColor="#A14004"
                android:angle="90"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <gradient
                android:startColor="#A14004"
                android:endColor="#A14004"
                android:angle="90"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <gradient
                android:startColor="@color/errorColor"
                android:endColor="@color/errorColor"
                android:angle="90"/>
        </shape>
    </item>
</selector>